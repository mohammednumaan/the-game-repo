extends layout 

block content 
    h2(class='section-title')= title 
    hr(style="width:130px")
    if categories.length
        ul(id="category-list") 
            each category in categories
                li 
                    a(href=`${category.url}`)
                        div(class='category-card')
                            div(class='category-card-content')
                                h2= category.name
                                p #{category.description}
                        
