extends layout 

block content 

    h1= title 
    form(method='POST' enctype="multipart/form-data")
        div.form-group
            label(for='name') Name: 
            input#name.form-control(type='text', placeholder='Name of The Game' name='name' required value=(undefined===game ? '' : game.name))
        
        div.form-group
            label(for='dev') Developer: 
            input#dev.form-control(type='text', placeholder='Developer' name='dev' required value=(undefined===game ? '' : game.developer))
    
            
        div.form-group
            label(for='desc') Description: 
            input#desc.form-control(type='text', placeholder='Description' name='desc' required value=(undefined===game ? '' : game.description))

        
        div.form-group
            label(for='price') Price: 
            input#price.form-control(type='text', placeholder='Price' name='price' required value=(undefined===game ? '' : game.price))
        
        div.form-group
            label(for='stock') In-Stock: 
            input#stock.form-control(type='text', placeholder='In-Stock' name='stock' required value=(undefined===game ? '' : game.stock))
 
        div.form-group
            label Category: 
            div 
                for category in categories 
                    div(style='display: inline; padding-right:10px;')
                        if category.checked
                            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked)
                        else
                            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id)
                        label(for=category._id) &nbsp;#{category.name}

        div.form-group
            label Upload Image 
            input#img.form-control(type="file" name="image" required)

        button.btn.btn-primary(type='submit') Submit


    if errors
        ul
        for error in errors
            li!= error.msg