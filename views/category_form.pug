extends layout 

block content 

    h1= title 
    form(method="POST")
        div.form-group
            label(for="category-name") Name: 
            input#category-name.form-control(type='text', placeholder='Name of The Category' name='category-name' required value=(undefined===category ? '' : category.name))

        div.form-group
            label(for="category-desc") Description: 
            input#category-desc.form-control(type='text', placeholder='Description' name='category-desc' required value=(undefined===category ? '' : category.description))

        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg